<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <!-- 设置按钮的背景颜色 -->
        <item name="android:backgroundTint">@color/button_color</item>
        <!-- 设置按钮的文本颜色 -->
        <item name="android:textColor">@color/black</item>
        <!-- 设置按钮的字体大小 -->
        <item name="android:textSize">16sp</item>
        <item name="android:text">Login</item>
    </style>

    <style name="ButtonStyle_meals" parent="Widget.AppCompat.Button">
        <!-- 设置按钮的背景颜色 -->
        <!-- 设置按钮的文本颜色 -->
        <item name="android:textColor">@color/icon_red</item>
        <!-- 设置按钮的字体大小 -->
        <item name="android:textSize">14sp</item>
        <item name="android:text">Add Food</item>
    </style>

    <style name="ButtonStyle_weight" parent="Widget.AppCompat.Button">
        <!-- 设置按钮的背景颜色 -->
        <!-- 设置按钮的文本颜色 -->
        <item name="android:textColor">@color/icon_red</item>
        <!-- 设置按钮的字体大小 -->
        <item name="android:textSize">13sp</item>
        <item name="android:text">Add Weight</item>
    </style>

    <style name="EmptyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
    </style>

    <style name="ProfileTextViewStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="ProfileEditTextStyle" >
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/cyan_blue</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@null</item>



    </style>

</resources>
